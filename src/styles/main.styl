@import 'typo.styl'
@import 'helpers.styl'

*
	font-smoothing antialiased
	box-sizing border-box
	&:before
	&:after
		box-sizing border-box

img
	image-rendering -webkit-optimize-contrast

html
body
	margin 0
	padding 0
	height 100%

body
	position relative
	font-family mainFont
	font-size 16px
	line-height 1.5
	color siteColor
